<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_round_image" />

    <TextView
        android:id="@+id/search_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="지나가는 익명의 족발"
        android:textColor="#000000"
        android:fontFamily="@font/nixgon_bold"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/search_time_text"
        app:layout_constraintStart_toEndOf="@+id/search_profile_image" />

    <TextView
        android:id="@+id/search_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:text="1분전"
        android:fontFamily="@font/nixgon_bold"
        android:textColor="#949494"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_profile_image"
        app:layout_constraintStart_toEndOf="@+id/search_profile_image" />

    <Button
        android:id="@+id/search_more_btn"
        android:layout_width="23dp"
        android:layout_height="24dp"
        android:layout_marginStart="188dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_name_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:text="대구 소프트웨어 고등학교 좋나요?"
        android:fontFamily="@font/nixgon_bold"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_profile_image" />

    <TextView
        android:id="@+id/search_question_text"
        android:layout_width="368dp"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/nixgonfontsmedium"
        android:text="안녕하세요 저는 새론 중 재학중인 학생입니다. 대구소프트웨어 고등학교에
        진학을 희망하고 있는데 어떤 학교이고 어떤 점이 좋은지 궁금합니다."
        android:textColor="#757575"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_title_text" />

    <Button
        android:id="@+id/search_heart_btn"
        android:layout_width="21dp"
        android:layout_height="18.36dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/heart"
        app:layout_constraintEnd_toStartOf="@+id/search_count_heart_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_question_text" />

    <TextView
        android:id="@+id/search_count_heart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nixgonfontsmedium"
        android:text="10"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/search_heart_btn"
        app:layout_constraintTop_toBottomOf="@+id/search_question_text" />

    <Button
        android:id="@+id/search_message_btn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/messege"
        app:layout_constraintStart_toEndOf="@+id/search_count_heart_text"
        app:layout_constraintTop_toBottomOf="@+id/search_question_text" />

    <TextView
        android:id="@+id/search_count_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nixgonfontsmedium"
        android:text="10"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/search_message_btn"
        app:layout_constraintTop_toBottomOf="@+id/search_question_text" />

    <View
        android:id="@+id/search_bar2_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        android:background="#CFCFCF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_heart_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>